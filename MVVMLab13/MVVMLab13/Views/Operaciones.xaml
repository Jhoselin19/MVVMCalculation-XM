<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVMLab13.Views.Operaciones">
    <ContentPage.Content>
        <StackLayout Padding="50">
            <Entry Placeholder="Valor 1" FontSize="Title" Text="{Binding Valor1}"></Entry>
            <Entry Placeholder="Valor 2" FontSize="Title" Text="{Binding Valor2}"></Entry>
            <Entry Placeholder="Valor 3" FontSize="Title" Text="{Binding Valor3}"></Entry>
            <Button Text="Sumar" FontSize="Title"
                    Command="{Binding Sumar}"
                   TextColor="Blue" BackgroundColor="White"></Button>
            <Label Text="{Binding ResultadoSumar}" FontSize="Title" FontAttributes="Bold"></Label>
            
            <Button Text="Multiplicar" FontSize="Title"
                    Command="{Binding Multiplicar}"
                   TextColor="Black" BackgroundColor="White"></Button>
            <Label Text="{Binding ResultadoMultiplicar}" FontSize="Title" FontAttributes="Bold"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>